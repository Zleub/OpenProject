echo 'Hello '`uname -m`_`uname -s`' !'


if [ `uname -s` = 'Darwin' ]; then
	echo 'Building for OSX'
	hash brew || (echo 'brew not found, aborting configure'; exit 0)
	echo 'brew OK'
	hash pandoc || (echo 'pandoc not found, installing ...'; brew install pandoc || exit 0)
	echo 'pandoc OK'
fi
# hash ls
